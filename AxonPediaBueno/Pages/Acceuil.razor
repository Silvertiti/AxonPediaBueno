@page "/"
@using Microsoft.AspNetCore.Components.Routing

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
    .hero {
        background: linear-gradient(to right, #667eea, #764ba2);
        color: white;
        padding: 4rem 2rem;
        text-align: center;
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .card-hover:hover {
        transform: scale(1.03);
        transition: transform 0.3s ease;
        cursor: pointer;
    }
</style>

<div class="container mt-5">
    <div class="hero">
        <h1 class="display-4">Bienvenue sur Axo'Pedia</h1>
        <p class="lead">Explorez et découvrez les articles enrichis de formats personnalisés.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5 mb-4">
            <NavLink href="/liste-articles" class="text-decoration-none text-dark">
                <div class="card card-hover shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">📚 Voir la liste des articles</h4>
                        <p class="card-text">Consultez tous les articles disponibles sur le site.</p>
                    </div>
                </div>
            </NavLink>
        </div>

        <div class="col-md-5 mb-4">
            <NavLink href="/creer-articles" class="text-decoration-none text-dark">
                <div class="card card-hover shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">🧠 Crée des articles</h4>
                        <p class="card-text">Naviguez vers l'onglet de création des articles.'.</p>
                    </div>
                </div>
            </NavLink>
        </div>
        <div class="col-md-5 mb-4">
            <NavLink href="/modifier-articles" class="text-decoration-none text-dark">
                <div class="card card-hover shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">✏️ Modifier des articles</h4>
                        <p class="card-text">Naviguez vers l'onglet de modification des articles'.</p>
                    </div>
                </div>
            </NavLink>
        </div>
    </div>
</div>
